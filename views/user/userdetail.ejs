    <script>
  
    function editaddress(id) {
      $.ajax({
      type: "POST",
      url: "/editaddress",
     data: {id},
     dataType: "json",
    encode: true,
    }).done(function (data) {

    if(data=="LOGIN FIRST"){
    console.log("SWEET");
                Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: 'Login first!',
      footer: '<a href="/login">Go to login</a>'
      })
      }

      console.log(data); 
      $('#actionmodel').attr('action','/updateaddress/'+data._id)
      $('#name').val(data.name)
      $('#house').val(data.house)
      $('#post').val(data.post)
      $('#city').val(data.city)
      $('#district').val(data.district)
      $('#state').val(data.state)
      $('#pin').val(data.pin)
    });
    }
    </script>

