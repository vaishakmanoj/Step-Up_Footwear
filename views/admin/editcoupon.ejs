<%-include('../admin/layout/adminheader')%>
    <div class="container">
        <div class="row">
            <% cooup.forEach((cop)=> { %>
                <div class="col-lg-6 mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary">
                            <form action="/admin/posteditcoupon/<%=cop._id %>"method="post"><h3 class="text-light">
                                 Edit Coupon</h3>
                        </div>
                        <div class="card-body p-4">

                            <div class="mb-3">
                                <label for="">Coupon Code</label>
                                <input type="text" name="couponCode" value="<%=cop.couponCode%>"
                                    class="form-control form-control-lg" />

                            </div>
                            <!-- <div class="mb-3">
                                <label for="">Coupon amount</label>
                                <input type="number" name="couponamount" value="<%=cop.couponamount%>"
                                    class="form-control form-control-lg" />

                            </div> -->
                            <div class="mb-3">
                                <label for="">percentage</label>
                                <input type="text" name="percentage" value="<%=cop.percentage%>"
                                    class="form-control form-control-lg" />

                            </div>
                            <div class="mb-3">
                                <label for="">Minimum amount</label>
                                <input type="number" name="minimumAmount" value="<%=cop.minimumAmount%>"
                                    class="form-control form-control-lg" />

                            </div>
                            <div class="mb-3">
                                <label for="">Exp Date</label>
                                <input type="date" name="expiryDate" value="<%=cop.expiryDate%>"
                                    class="form-control form-control-lg" required />

                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success px-5">Edit</button>
                            </div>

                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%-include('../admin/layout/adminfooter.ejs')%>