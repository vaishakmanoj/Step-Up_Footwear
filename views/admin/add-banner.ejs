
<%-include('../admin/layout/adminheader.ejs')%>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New Banner</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/admin/adbanner" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="">Name</label>
                            <input type="text" name="Bname" class="form-control form-control-lg" />
                        </div>
                        <div class="mb-3">
                            <label for="">BannerImage</label>
                            <input type="file" name="BImage" class="form-control form-control-lg" placeholder="choose an image"  />
                        </div>
                        <div class="mb-3">
                            <label for="Description">Description</label>
                            <input type="text" name="discription" class="form-control form-control-lg" />
                        </div>
                        <div class="mb-3">
                            <label for="">BannerUrl</label>
                            <input type="text" name="url" class="form-control form-control-lg" />
                        </div>
                      
                       
                       
                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-success px-5"> Add Banner</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%-include('../admin/layout/adminfooter.ejs')%>

