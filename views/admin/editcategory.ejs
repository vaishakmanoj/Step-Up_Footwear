
    <div class="container">
        <div class="row">
            <% category.forEach((cate)=> { %> 
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <form action="/admin/edicategory/<%= cate._id %>" method="post">
                            
                            <h3 class="text-light">Edit Category</h3>
                    </div>
                    <div class="card-body p-4">

                        <div class="mb-3">
                            <label for="">CategoryName</label>
                            <input type="text" name="name" value="<%= cate.name%>"class="form-control form-control-lg"/>
                            
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success px-5">Edit</button>
                        </div>

                        </form>
                    </div>
                </div>
            </div>
            <% }) %> 
        </div>
    </div>





  